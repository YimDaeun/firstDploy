<div class="page-title">
  <h1>Edit the Post</h1>
</div>

<form action ="/update/<%= @editing_post.id %>" method="POST" >
  <div class="form-group">
    <label for="input_title">Title</label>
    <input type="text" class="form-control" name="post_title" value= "<%= @editing_post.title %>" >
  </div>
  <div class="form-group">
    <label for="input_content">Content</label>
    <textarea name="post_content" class="form-control" rows="5"> <%= @editing_post.content %> </textarea>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>